<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LuminoStudio.Views"
                    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                    xmlns:ln="http://lumino.net/wpf">
    
    <Style x:Key="lnWindowStyle" TargetType="{x:Type Controls:MetroWindow}">
        <Setter Property="WindowTitleBrush" Value="Transparent"/>
        <Setter Property="NonActiveWindowTitleBrush" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AccentColorBrush}"/>
        <Setter Property="GlowBrush" Value="{DynamicResource AccentColorBrush}"/>
    </Style>

    <!-- ln:CallMethodButton のスタイルを MaterialDesignRaisedButton にする -->
    <Style TargetType="{x:Type ln:CallMethodButton}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
    </Style>
</ResourceDictionary>